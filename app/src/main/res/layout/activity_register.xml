<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:background="@drawable/fondo2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/BotonX"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="@string/app_name"
            android:textColor="@color/colorTitle"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/editMail"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="40sp"
            android:hint="@string/email"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/mailError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El email no es válido"
            android:layout_marginLeft="55sp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible"
        />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="40sp"
            android:hint="@string/userName"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/passError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El nombre no puede estar vacío"
            android:layout_marginLeft="55sp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible"
            />

        <EditText
            android:id="@+id/editPass"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="40sp"
            android:hint="@string/password"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editPass2"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="40sp"
            android:hint="Repetir contraseña"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El nombre no puede estar vacío"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible"
            />


        <Button
            android:id="@+id/ok"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Register"
            android:background="@color/colorRegister" />

    </LinearLayout>


</ScrollView>