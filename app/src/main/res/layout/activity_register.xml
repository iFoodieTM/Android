<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:background="@drawable/fondo2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/button_cross2"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="iFoodie"
            android:textColor="#000000"
            android:textSize="70dp"
            app:fontFamily="@font/rajdhani_bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Registro"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            app:fontFamily="@font/rajdhani_medium"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:text="Usuario"
                android:textAlignment="center"
                android:textSize="20dp"
                app:fontFamily="@font/rajdhani_bold"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:text="|"
                android:textSize="20dp"
                android:textAlignment="center"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Restaurante"
                android:textAlignment="center"
                android:textSize="20dp"
                app:fontFamily="@font/rajdhani_light"
                android:id="@+id/RegisterRestaurante"></TextView>
        </LinearLayout>


        <EditText
            android:id="@+id/editMail"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"
            android:hint="@string/email"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/mailError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El email no es válido"
            android:layout_marginLeft="55sp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible"
        />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"
            android:hint="@string/userName"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/passError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El nombre no puede estar vacío"
            android:layout_marginLeft="55sp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible"
            />

        <EditText
            android:id="@+id/editPass"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"
            android:hint="@string/password"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editPass2"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"
            android:hint="Repetir contraseña"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El nombre no puede estar vacío"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible"
            />


        <Button
            android:id="@+id/ok"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Registrar"
            android:background="@drawable/button_register" />

    </LinearLayout>


</ScrollView>